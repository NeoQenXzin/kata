{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>
		<h2>Your Books:</h2>

		{% if books is not empty %}
			{% for book in books %}
				<div>
					<strong>Title:</strong>
					{{ book.volumeInfo.title }}
					<strong>Author:</strong>
					{{ book.volumeInfo.authors|join(', ') }}
				</div>
			{% endfor %}
		{% else %}
			<p>No books found.</p>
		{% endif %}
	</div>
{% endblock %}
